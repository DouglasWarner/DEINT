<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.github.ivbaranov.mli.MaterialLetterIcon
        android:id="@+id/iconLetter"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:mli_letter="D"
        app:mli_shape_color="@color/colorAccent"
        app:mli_shape_type="circle">

    </com.github.ivbaranov.mli.MaterialLetterIcon>

    <TextView
        android:id="@+id/tvShortName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="textview"
        android:textSize="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/iconLetter"
        app:layout_constraintStart_toEndOf="@+id/iconLetter"
        app:layout_constraintTop_toTopOf="@+id/iconLetter" />
</androidx.constraintlayout.widget.ConstraintLayout>